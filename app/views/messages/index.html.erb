<!-- START #fh5co-hero -->
<aside id="fh5co-hero">
  <!-- literally just for the image -->
</aside>

<section>
  <!-- START FEATURE 2 -->
<div class="container">

  <div class="row fh5co-feature-2">

    <div class="col-md-12">
      <h2 class="fh5co-uppercase-heading-lg text-center"><%= Message.model_name.human(count:2) %></h2>
    </div>

    <div class="col-md-8 col-md-offset-2">
      <% if current_user.try(:admin?) %>
      <div class="fh5co-spacer fh5co-spacer-sm"></div>
        <div class="actions">
          <%= link_to 'New Message', new_message_path, class: "btn btn-primary btn-lg btn-block" %>
        </div>
				<div class="fh5co-spacer fh5co-spacer-md"></div>
      <% end %>
    </div>

<p id="notice"><%= notice %></p>

    <% @messages.each do |message| %>

        <div class="col-md-6 col-sm-6 fh5co-feature-item">
            <% case %>
              <%  when params[:locale] == "en" %>
                <span class="fh5co-feature-icon">
                  <% if message.images.attached? %>
                    <i><%= image_tag message.images.first.variant(resize_to_limit: [700, 400]), class: "img-fluid", :style => "max-width: 90%; height: auto"%></i>
                  <% else %>
                    <i class="ti-layout-placeholder" style="color:red;"></i>
                  <% end %>
                </span>
                <h2 class="text-center fh5co-feature-title h4 text-uppercase"><%= message.en_name %></h2>

              <%  when params[:locale] == "zh_TW" %>
                <span class="fh5co-feature-icon">
                  <% if message.zh_tw_images.attached? %>
                    <i><%= image_tag message.zh_tw_images.first.variant(resize_to_limit: [700, 400]), class: "img-fluid", :style => "max-width: 90%; height: auto"%></i>
                  <% else %>
                    <i class="ti-layout-placeholder" style="color:red;"></i>
                  <% end %>
                </span>
                <h2 class="text-center fh5co-feature-title h4 text-uppercase"><%= message.zh_tw_name %></h2>

              <%  when params[:locale] == "zh_CN" %>
                <span class="fh5co-feature-icon">
                  <% if message.zh_cn_images.attached? %>
                    <i><%= image_tag message.zh_cn_images.first.variant(resize_to_limit: [700, 400]), class: "img-fluid", :style => "max-width: 90%; height: auto"%></i>
                  <% else %>
                    <i class="ti-layout-placeholder" style="color:red;"></i>
                  <% end %>
                </span>
                <h2 class="text-center fh5co-feature-title h4 text-uppercase"><%= message.zh_cn_name %></h2>

              <%  when params[:locale] == "vi" %>
                <span class="fh5co-feature-icon">
                  <% if message.vi_images.attached? %>
                    <i><%= image_tag message.vi_images.first.variant(resize_to_limit: [700, 400]), class: "img-fluid", :style => "max-width: 90%; height: auto"%></i>
                  <% else %>
                    <i class="ti-layout-placeholder" style="color:red;"></i>
                  <% end %>
                </span>
                <h2 class="text-center fh5co-feature-title h4 text-uppercase"><%= message.vi_name %></h2>

              <%  when params[:locale] == "hmn" %>
                <span class="fh5co-feature-icon">
                  <% if message.hmn_images.attached? %>
                    <i><%= image_tag message.hmn_images.first.variant(resize_to_limit: [700, 400]), class: "img-fluid", :style => "max-width: 90%; height: auto"%></i>
                  <% else %>
                    <i class="ti-layout-placeholder" style="color:red;"></i>
                  <% end %>
                </span>
                <h2 class="text-center fh5co-feature-title h4 text-uppercase"><%= message.hmn_name %></h2>
              <% end %>

              <p class="text-center"><%= link_to t('messages.read_more'), message, class: "btn btn-primary btn-sm" %></p>
            <% if current_user.try(:admin?) %>
              <p class="text-center"><%= link_to 'Edit this message', edit_message_path(message), class:"btn btn-primary btn-sm" %></p>
              <p class="text-center"><%= link_to 'Delete this message', message, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary btn-sm" %></p>
            <% end %>
            <div class="fh5co-spacer fh5co-spacer-md"></div>
          </div>
          <% end %>

    <div class="col-md-8 col-md-offset-2">
      <div class="actions">
        <%= link_to t('messages.back'), messages_path, class: "btn btn-outline btn-lg btn-block" %>
      </div>
    </div>

  </div>
</section>
